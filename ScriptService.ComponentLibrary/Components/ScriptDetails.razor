@page "/scripts/{Id:int}"

@if (_script == null)
{
				<MudImage Src="images/loading.gif" />
}
else
{
				<MudNavLink Href="/scripts">Back to scripts</MudNavLink>
				<MudPaper>
								<MudForm @onsubmit="OnSubmit">
												<MudText>@_script.FullName</MudText>
												<MudDivider />
												<textarea @bind-value="@_script.Content" @bind-value:event="oninput"></textarea>
												<AuthorizeView>
																<MudButton StartIcon="@Icons.Material.Filled.Save" Color="@Color.Primary">Save</MudButton>
																<MudButton Href="/scripts" Color="@Color.Secondary">Cancel</MudButton>
												</AuthorizeView>				
								</MudForm>
				</MudPaper>
}